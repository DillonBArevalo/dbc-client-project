-if @review.reviewable_type == "Film"
  %h1
    Review for #{@review.reviewable.title}
-else
  %h1
    Review for #{@review.reviewable.first_name} #{@review.actor.last_name}

.review-full
  %p
    =render partial: 'show', locals: {review: @review}
  -if current_user == @review.user
    = link_to("Edit", edit_review_path(@review))
    = link_to("Delete", review_path(@review), method: 'DELETE')

  %label Rating:
  = @review.rating_avg

  - if !@review.raters.include?(current_user)
    -# = render partial: 'ratings/form'

.review-comments
  %h2 Comments:
  =link_to("New Comment!", "/reviews/#{@review.id}/comments/new")
  - @review.comments.each do |comment|
    = render partial: 'comments/show', locals: {comment: comment}
